{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
